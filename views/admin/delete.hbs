<div class="my-3 p-3 bg-white rounded shadow-sm">
  <!-- Category Delete -->
  {{#ifCond type '==' 'cat'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Διαγραφή Κατηγορίας</h6>
    {{#if result}}

      <small class="text-muted mt-3">Αρχικό Κείμενο: {{result.category}}</small>

      <form action="/admin/category/{{result.id}}/delete" method="post" class="mt-3">
        <div class="form-group">
          <input type="text" class="form-control" id="categoryName" name="categoryName" aria-describedby="emailHelp" placeholder="Όνομα Κατηγορίας" value="{{result.category}}" disabled>
        </div>
        <div class="d-flex justify-content-between border-top pt-3 mt-3">
          <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
          <a href="/admin/category" class="my-auto"><small>Πίσω</small></a>
        </div>

      </form>
    {{/if}}

  {{/ifCond}}

  <!-- File Delete -->
  {{#ifCond type '==' 'file'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Επεξεργασία Αρχείου</h6>

    <div class="row mt-3">
      <div class="col-12 col-sm-4 my-auto text-center text-muted">
        {{#ifCond ftype '==' 'doc'}}
          <i class="fas fa-file fa-10x"></i>
          {{else}}
            <img src="{{disppath}}" class="img-fluid" alt="{{name}}">
        {{/ifCond}}
      </div>
      <div class="col-12 col-sm-8 text-muted">
        <form action="/admin/file/delete/{{ftype}}/{{name}}" method="post" class="mt-3">
          <div class="form-group">
            <label for="path"> <small> Διαδρομή Φακέλου </small></label></h6>
            <input type="text" class="form-control form-control-sm" id="path" aria-describedby="textHelp" placeholder="Διαδρομή Αρχείου" value="{{path}}" readonly>
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>
          <div class="form-group">
            <label for="filename"> <small>Όνομα Αρχείου</small></label>
            <input type="text" class="form-control form-control-sm" id="filename" name="filename" placeholder="Όνομα Αρχείου" value="{{name}}" readonly>
          </div>
          <div class="d-flex justify-content-between border-top pt-3 mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
            <a href="/admin/file" class="my-auto"><small>Πίσω</small></a>
          </div>

        </form>
      </div>
    </div>
  {{/ifCond}}
  <!-- Program Delete -->
  {{#ifCond type '==' 'prog'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Διαγραφή Προγράμματος</h6>
    {{#if result}}

      <!-- <small class="text-muted mt-3">Αρχικό Κείμενο: {{result.category}}</small> -->

      <form action="/admin/program/{{result.id}}/delete" method="post" class="mt-3">
        <div class="form-group">
          <input type="text" class="form-control" id="programName" name="programName" aria-describedby="textHelp" placeholder="Τιτλος Προγράμματος" value="{{result.title}}" disabled>
        </div>
        <div class="d-flex justify-content-between border-top pt-3 mt-3">
          <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
          <a href="/admin/program" class="my-auto"><small>Πίσω</small></a>
        </div>

      </form>
    {{/if}}

  {{/ifCond}}
  <!-- Announcement Delete -->
  {{#ifCond type '==' 'news'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Διαγραφή Ανακοίνωσης</h6>
    {{#if result}}

      <!-- <small class="text-muted mt-3">Αρχικό Κείμενο: {{result.category}}</small> -->

      <form action="/admin/news/{{result.id}}/delete" method="post" class="mt-3">
        <div class="form-group">
          <input type="text" class="form-control" id="newsName" name="newsName" aria-describedby="textHelp" placeholder="Τίτλος Ανακοίνωσης" value="{{result.title}}" disabled>
        </div>
        <div class="d-flex justify-content-between border-top pt-3 mt-3">
          <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
          <a href="/admin/news" class="my-auto"><small>Πίσω</small></a>
        </div>

      </form>
    {{/if}}

  {{/ifCond}}

  <!-- Category Delete -->
  {{#ifCond type '==' 'exp-cat'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Διαγραφή Κατηγορίας</h6>
    {{#if result}}

      <!-- <small class="text-muted mt-3">Αρχικό Κείμενο: {{result.name}}</small> -->

      <form action="/admin/settings/exp-cat/{{result.id}}/delete" method="post" class="mt-3">
        <div class="form-group">
          <input type="text" class="form-control" id="categoryName" name="categoryName" aria-describedby="textHelp" placeholder="Όνομα Κατηγορίας" value="{{result.name}}" disabled>
        </div>
        <div class="d-flex justify-content-between border-top pt-3 mt-3">
          <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
          <a href="/admin/settings/exp" class="my-auto"><small>Πίσω</small></a>
        </div>

      </form>
    {{/if}}

  {{/ifCond}}
  
    <!-- Experience Delete -->
    {{#ifCond type '==' 'exp-file'}}
      <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Διαγραφή Αρχείου</h6>
      {{#if result}}

        <!-- <small class="text-muted mt-3">Αρχικό Κείμενο: {{result.id}}</small> -->

        <form action="/admin/settings/exp-file/{{result.id}}/delete" method="post" class="mt-3">
          <div class="form-group">
            <input type="text" class="form-control" id="epxName" name="epxName" aria-describedby="textHelp" placeholder="Όνομα Αρχείου" value="{{result.title}}" disabled>
          </div>
          <div class="d-flex justify-content-between border-top pt-3 mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Διαγραφή</button>
            <a href="/admin/settings/exp" class="my-auto"><small>Πίσω</small></a>
          </div>

        </form>
      {{/if}}


  {{/ifCond}}


</div>
